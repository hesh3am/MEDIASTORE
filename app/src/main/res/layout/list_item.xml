<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/colorbackground2">

    <TextView
        android:id="@+id/name_product_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:textColor="@color/colorbackground3"
        android:textSize="15sp"
        tools:text="product name" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_quantity_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorMedia"
                android:textSize="15sp"
                tools:text="product quantity" />


            <Button
                android:id="@+id/edit_button"
                style="@style/ListItemOnClickstyle"
                android:drawableLeft="@drawable/edit"
                android:text="@string/edit" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/product_price_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                tools:text="product price" />

            <Button
                android:id="@+id/sale_button"
                style="@style/ListItemOnClickstyle"
                android:drawableLeft="@drawable/cart"
                android:text="@string/sale" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
